<%= form_for :session, url: session_path, html: {role: 'form', class: 'form-horizontal mt'} do |form| %>
  <div class="form-group">
    <%= form.label :email, class: 'col-md-4 control-label' %>
    <div class="col-md-8">
        <%= form.text_field :email, type: 'email', class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :password, class: 'col-md-4 control-label' %>
      <div class="col-md-8">
          <%= form.password_field :password, class: 'form-control' %>
      </div>
  </div>

  <div class="form-group">
    <%= form.submit class: 'btn btn-default mt col-md-offset-4' %>
  </div>
<% end %>
