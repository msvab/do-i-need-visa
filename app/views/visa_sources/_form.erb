<div class="form-group <%= raw('has-error has-feedback') unless src.errors[:name].empty? %>">
    <%=	form.label :name, 'Name', {class: 'col-md-3 control-label'} %>

    <div class="col-md-8 controls">
        <%= form.text_field :name, {class: 'form-control'} %>
    </div>
</div>
<div class="form-group <%= raw('has-error has-feedback') unless src.errors[:country].empty? %>">
    <%=	form.label :country, 'Country', {class: 'col-md-3 control-label'} %>

    <div class="col-md-8 controls">
        <%= form.country_select :country, nil, {iso_codes: true}, {class: 'chosen-select'} %>
    </div>
</div>
<div class="form-group <%= raw('has-error has-feedback') unless src.errors[:url].empty? %>">
    <%=	form.label :url, 'URL', {class: 'col-md-3 control-label'} %>

    <div class="col-md-8 controls">
        <%= form.url_field :url, {class: 'form-control'} %>
    </div>
</div>
<div class="form-group <%= raw('has-error has-feedback') unless src.errors[:selector].empty? %>">
    <%=	form.label :selector, 'CSS Selector', {class: 'col-md-3 control-label'} %>

    <div class="col-md-8 controls">
        <%= form.text_field :selector, {class: 'form-control'} %>
    </div>
</div>
<div class="form-group <%= raw('has-error has-feedback') unless src.errors[:page_hash].empty? %>">
    <%=	form.label :page_hash, 'Page Hash', {class: 'col-md-3 control-label'} %>

    <div class="col-md-8 controls">
        <%= form.text_field :page_hash, {class: 'form-control'} %>
    </div>
</div>
<div class="form-group <%= raw('has-error has-feedback') unless src.errors[:visa_required].empty? %>">
    <div class="col-md-offset-3 col-md-8">
        <label class="checkbox">
            <%= form.check_box :visa_required %>
            Visa required
        </label>
    </div>
</div>
<div class="form-group <%= raw('has-error has-feedback') unless src.errors[:on_arrival].empty? %>">
    <div class="col-md-offset-3 col-md-8">
        <label class="checkbox">
            <%= form.check_box :on_arrival %>
            Visa on arrival
        </label>
    </div>
</div>
<div class="form-group">
    <label class="col-md-3 control-label">Applies to citizens of</label>

    <div class="col-md-8 controls">
        <%= form.select :visa_codes, Country.all.sort_by { |elem| elem[0] }, {}, {multiple: true, class: 'chosen-select'} %>
    </div>
</div>
<div class="form-group <%= raw('has-error has-feedback') unless src.errors[:description].empty? %>">
    <label class="col-md-3 control-label">Description</label>

    <div class="col-md-8">
        <%= form.text_area :description, {class: 'form-control', rows: '10'} %>
    </div>
</div>
<div class="form-group mt">
    <div class="col-md-offset-3 col-md-8">
        <button type="submit" class="btn btn-primary"><%= btn_label %></button>
        <%= link_to 'Back to Sources', {controller: 'visa_sources', action: 'index'}, {class: 'btn btn-default', role: 'button'} %>
    </div>
</div>